<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <title>Person</title>
</head>
<body style="background-color: #d2c1ad;">
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: white;">
        <div class="container-fluid">
            <a href="/">
                <img src="http://localhost:3000/img/logo.png" style="height: 40px; margin-right: 10px;">
            </a>
                Kobz
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse float-right" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0"></ul>
                <button class="btn btn-outline-dark float-right">Contact</button>
            </div>
        </div>
    </nav>



    <!-- Time -->
    <div class="container" style="margin-top: 100px;">
        <center>
            <div class="row justify-content-md-center">
                <class class="col-2 align-self-center" id="flag">
                    
                </class>
                <class class="col-4 align-self-center" style="margin-left: 50px;">
                    <div class="row">
                        <h1 style="text-align: left;" id="temp">
                            <b id="date"><%=berlinTime[0]; %></b>
                        </h1>
                    </div>
                    <div class="row ">
                        <h4 style="text-align: left;" id="time">
                            <%=berlinTime[1]; %>
                        </h4>
                    </div>
                </class>
            </div>
        </center>
    </div>
    <br><br><br>

    <center>
        <div style="width: 80%">
            <!-- New person -->
            <a href="/add"><button type="button" class="btn float-right" style="font-size: smaller; margin-bottom: 10px;">Add</button></a>
            <!-- Table -->
        
            <table class="table" >
                <thead class="thead-dark">
                <tr>
                    <th scope="col" style="text-align: center;">#</th>
                    <th scope="col" style="text-align: center;">Person Name</th>
                    <th scope="col" style="text-align: center;">Birthdate</th>
                    <th scope="col" style="text-align: center;">Nationality</th>
                    <th scope="col" style="text-align: center;">Actions</th>
                </tr>
                </thead>
                <tbody>
                    <% if(data.length > 0){ %>
                        <%  var temp = 1; %> 
                        <%  data.forEach(x =>{ %> 
                            <tr>
                                <th scope="row" style="text-align: center;"><%=temp %></th>
                                <td style="text-align: center;"><%=x.name %></td>
                                <td style="text-align: center;"><%=x.birthday %></td>
                                <td style="text-align: center;"><%=x.nationality %></td>
                                <td style="text-align: center;"><a href="/person/<%=x._id %>"><button type="button" class="btn" style="height: 30px; font-size: smaller;">View</button></a></td>
                            </tr>
                            <% temp++; %>
                        <% }) %> 
                    <% } %>
                </tbody>
            </table>
        </div>
    </center>
    


    <script>
        if(localStorage.getItem('timezone') == 'manila'){
            document.getElementById('date').innerHTML = "<%=manilatime[0]; %>";
            document.getElementById('time').innerHTML = "<%=manilatime[1]; %>";
            document.getElementById('flag').innerHTML = "<img src=\"https://upload.wikimedia.org/wikipedia/commons/thumb/9/99/Flag_of_the_Philippines.svg/1920px-Flag_of_the_Philippines.svg.png\" style=\"width: 200px;\">";
        }else if(localStorage.getItem('timezone') == 'tokyo'){
            document.getElementById('date').innerHTML = "<%=tokyotime[0]; %>";
            document.getElementById('time').innerHTML = "<%=tokyotime[1]; %>";
            document.getElementById('flag').innerHTML = "<img src=\"https://upload.wikimedia.org/wikipedia/en/thumb/9/9e/Flag_of_Japan.svg/1200px-Flag_of_Japan.svg.png\" style=\"width: 200px;\">";
        }else if(localStorage.getItem('timezone') == 'newyork'){
            document.getElementById('date').innerHTML = "<%=nytime[0]; %>";
            document.getElementById('time').innerHTML = "<%=nytime[1]; %>";
            document.getElementById('flag').innerHTML = "<img src=\"https://cdn.britannica.com/79/4479-050-6EF87027/flag-Stars-and-Stripes-May-1-1795.jpg\" style=\"width: 200px;\">";
        }else if(localStorage.getItem('timezone') == 'london'){
            document.getElementById('date').innerHTML = "<%=londontime[0]; %>";
            document.getElementById('time').innerHTML = "<%=londontime[1]; %>";
            document.getElementById('flag').innerHTML = "<img src=\"https://upload.wikimedia.org/wikipedia/en/thumb/a/ae/Flag_of_the_United_Kingdom.svg/1200px-Flag_of_the_United_Kingdom.svg.png\" style=\"width: 200px;\">";
        }else if(localStorage.getItem('timezone') == 'berlin'){
            document.getElementById('date').innerHTML = "<%=berlinTime[0]; %>";
            document.getElementById('time').innerHTML = "<%=berlinTime[1]; %>";
            document.getElementById('flag').innerHTML = "<img src=\"https://upload.wikimedia.org/wikipedia/commons/thumb/e/ec/Flag_of_Berlin.svg/1200px-Flag_of_Berlin.svg.png\" style=\"width: 200px;\">";
        }
    </script>
    <!-- Script -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>
</html>