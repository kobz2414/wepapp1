<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <title>Person</title>
</head>
<body style="background-color: #d2c1ad;">
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: white;">
        <div class="container-fluid">
            <a href="/">
                <img src="http://localhost:3000/img/logo.png" style="height: 40px; margin-right: 10px;">
            </a>
                Kobz
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse float-right" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0"></ul>
                <button class="btn btn-outline-dark float-right">Contact</button>
            </div>
        </div>
    </nav>

    <div style="width: 25%; margin: 0;
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                border: 3px solid white;
                padding: 40px;
                border-radius: 20px;">
            <div id="flag">
                <% if(data.nationality == 'Filipino'){ %> 
                    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/9/99/Flag_of_the_Philippines.svg/1920px-Flag_of_the_Philippines.svg.png" style="width: 100px; margin-left: 72%;">
                <% }else if(data.nationality == 'Japanese'){ %> 
                    <img src="https://upload.wikimedia.org/wikipedia/en/thumb/9/9e/Flag_of_Japan.svg/1200px-Flag_of_Japan.svg.png" style="width: 100px; margin-left: 72%;">
                <% }else if(data.nationality == 'American'){ %> 
                    <img src="https://cdn.britannica.com/79/4479-050-6EF87027/flag-Stars-and-Stripes-May-1-1795.jpg" style="width: 100px; margin-left: 72%;">
                <% }else if(data.nationality == 'European'){ %> 
                    <img src="https://upload.wikimedia.org/wikipedia/en/thumb/a/ae/Flag_of_the_United_Kingdom.svg/1200px-Flag_of_the_United_Kingdom.svg.png" style="width: 100px; margin-left: 72%;">
                <% }else if(data.nationality == 'German'){ %> 
                    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/e/ec/Flag_of_Berlin.svg/1200px-Flag_of_Berlin.svg.png" style="width: 100px; margin-left: 72%;">
                <% } %>
            </div>
            <div class="form-group">
                <label for="inputName" style="color: white;">Name</label>
                <input type="text" class="form-control" id="outName" value="<%=data.name %> " readonly="readonly">
            </div>
            <div class="form-group" style="color: white;">
                <label for="nationality">Nationality</label>
                <input type="text" class="form-control" id="outNationality" value="<%=data.nationality %> " readonly="readonly">
            </div>
            <div class="form-group" style="color: white;">
                <label for="inputDate">Birthday</label>
                <input class="form-control" type="text"  id="outBirthday" value="<%=data.birthday %> " readonly="readonly">
            </div>
            <a href="/person"><button class="btn float-right">Exit</button></a> 
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>
</html>